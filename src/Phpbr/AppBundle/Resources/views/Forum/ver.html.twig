{% extends "::layout.html.twig" %}

{% block title %}Forum{% endblock %}

{% block content %}
<div class="row main-div-background">
    <div class="large-11 large-centered columns">
        <div class="large-8 columns">
            <h3><a href="{{ url('forum_index') }}">Forum</a> | {{ category.name }} </h3>
        </div>

        <div class="large-3 columns">
            <a href="{{ url('forum_new_topic') }}" class="button secondary right">
                {{ 'phpbr.forum.new_topic'|trans({}, 'forum') }}
            </a>
        </div>
        <hr />
        <div class="panel radius">
            {{ category.description }}
        </div>
    </div>

    <div class="row collapse">
        <div class="large-11 large-centered columns">
            <table class="forum-full-width">
                <thead>
                    <tr>
                        <th scope="column">
                            <strong>{{ 'phpbr.forum.subject'|trans({}, 'forum')|upper }}</strong>
                        </th>
                        <th scope="column" class="text-center" width="80">
                            <strong>{{ 'phpbr.forum.messages'|trans({}, 'forum')|upper }}</strong>
                        </th>
                        <th scope="column" class="text-center" width="220">
                            <strong>{{ 'phpbr.forum.author'|trans({}, 'forum')|upper }}</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for topico in topicos %}
                        <tr>
                            <td>
                                <p>
                                    <a href="{{ url('forum_view_message', {'slug_category': topic.category.slug, 'slug': topic.slug}) }}">
                                        {{ topic.subject }}
                                    </a>
                                </p>
                            </td>
                            <td class="text-center">
                                <strong>{{ (topic.id|topicMessagesCount) + 1 }}</strong>
                            </td>
                            <td>
                                <a href="{{ url('phpbr_app_viewuser', {'user': topic.user.username} ) }}">
                                    <img src="{{ topic.user.email|email2gravatar('40') }}" alt="{{ topic.user.name|e }}" class="avatar" />
                                    &nbsp;
                                    {{ topic.user.name }}
                                </a>

                                <br>
                                &nbsp;
                                {{ topic.dataCriacao|date('U')|time_passed }} {{ 'phpbr.forum.ago'|trans({}, 'forum') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}
