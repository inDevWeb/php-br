
{% extends '::layout.html.twig' %}

{% block title %}
    {{ entity.title }}
{% endblock %}
{% set queryParams = app.request.query.all %}

{% block content %}
<div class="row main-div-background">
    <div class="row">
        <div class="large-11 large-centered columns">
            <div class="large-8 columns">
                <h4>
                    http://cole.php-br.org/{{ entity.id }}
                    <a href="http://cole.php-br.org/{{ entity.id }}/ver-raw" target="_blank" class="label info">[raw]</a>
                    <h5>
                        <strong>Titulo:</strong> {{ entity.title }}
                        <span class="label success">{{ entity.createdAt|date('U')|time_passed }} {{ 'phpbr.forum.ago'|trans({}, 'main') }}</span>
                    </h5>
                </h4>
            </div>
            <div class="large-3 columns">
                <a href="{{ url('paste_new') }}" class="button success right">
                    {{ 'phpbr.paste.new_paste'|trans({}, 'main') }}
                </a>
            </div>
        </div>
    </div>

    <div class="row" style="clear: both;">
        {% if app.session.get('deleteKey') is defined %}
            {% if app.session.get('deleteKey') == entity.deleteKey %}
                {{ form(delete_form) }}
                <span class="label alert">{{ 'phpbr.paste.delete_button_message'|trans({}, 'main') }}</span>
            {% endif %}
        {% endif %}
        <div class="panel" style="overflow:auto;">{{ code|e }}</div>
    </div>

</div>
{% endblock %}
