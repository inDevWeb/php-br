{% extends "::layout.html.twig" %}
{% block content %}
    <div class="row main-div-background">
        <div class="large-12 columns">
            <h3><a href="{{ path('lista_meus_artigos') }}">Meus Artigos</a> :: Editar Artigo</h3>
            {% if app.request.query.all['sucesso'] is defined %}
                <div class="panel callout radius">
                    Artigo atualizado com sucesso!
                    <p><a href="{{ path('lista_meus_artigos') }}">Clique aqui</a> para retonar a sua lista de artigos</a>
                </div>
            {% endif %}

            {{ form(edit_form) }}
            <ul class="record_actions"></ul>
        </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        phpbr.countdown('countdown-resumo');
    </script>
{% endblock %}

